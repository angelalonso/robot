<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="0,1,2,3"
    android:stretchRows="1"
    android:rowCount="5"
    android:columnCount="3">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/button_dummy"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text=""
            android:visibility="invisible" />
        <Button
            android:id="@+id/button_dummy2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text=""
            android:visibility="invisible" />
        <Button
            android:id="@+id/button_cfg"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:onClick="goToSettingsActivity"
            android:text="CFG" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        >
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/buttonUL"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:visibility="invisible"
            android:text="" />

        <Button
            android:id="@+id/button_up"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="UP" />

        <Button
            android:id="@+id/buttonUR"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:visibility="invisible"
            android:text="" />
    </TableRow>
    <TableRow>

        <Button
            android:id="@+id/button_left"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="LEFT" />

        <Button
            android:id="@+id/button_stop"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="STOP" />

        <Button
            android:id="@+id/button_right"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="RIGHT" />
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/buttonDL"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:visibility="invisible"
            android:text="" />

        <Button
            android:id="@+id/button_down"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="DOWN" />

        <Button
            android:id="@+id/buttonDR"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:visibility="invisible"
            android:text="" />
    </TableRow>

</TableLayout>